<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.whatsapp_connect</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="whatsapp_connect.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div//div//div" position="inside">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <button name="test_whatsapp_config" string="Validate" type="object"/>
                        <button name="whatsapp_logout" string="Disconnect" type="object"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
